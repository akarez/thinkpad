[settings]

screenchange-reload = true
#compositing-background = xor
#compositing-background = screen
#compositing-foreground = source
#compositing-border = over
pseudo-transparency = true


[global/wm]

margin-top = 0
margin-bottom = 0


[colors] 

background	    = #282828
background-alt	= #282828

foreground	    = #ebdbb2
foreground-alt	= #504945

yellow  = #b58900;
orange  = #cb4b16;
red     = #dc322f;
magenta = #d33682;
violet  = #6c71c4;
blue    = #268BD2;
cyan    = #2aa198;
green   = #859900;


[bar/main]

monitor =
monitor-fallback = eDP1

wm-restack = bspwm
enable-ipc = true

width = 100%
height = 24
radius = 0

#offset-x = 0
#offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #E8E9EC

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = SFMono:pixelsize=11;3
font-1 = Iosevka Nerd Font:size=9:antialias=true;3

modules-left = bspwm  
modules-right = network pulseaudio battery time

tray-position = none

cursor-click = pointer
cursor-scroll = ns-resize


[module/bspwm]

type = internal/bspwm

pin-workspaces = true
enable-click = true

format = <label-state>

label-focused = %index%
label-focused-padding = 1
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.foreground}

label-occupied = %index%
label-occupied-padding = 1
label-occupied-foreground = ${colors.foreground}

label-empty = %index%
label-empty-padding = 1
label-empty-foreground = ${colors.foreground-alt}

label-urgent = %index%
label-urgent-padding = 1
label-urgent-foreground = ${colors.red}


[module/pulseaudio]

type = internal/pulseaudio

format-volume = <label-volume>

label-volume = VOL:%percentage%%
label-volume-background = ${colors.background}
label-volume-foreground = ${colors.foreground}

label-muted = MUTED
label-muted-foreground = ${colors.red}
label-muted-background = ${colors.background}


[module/battery]

type = internal/battery

full-at = 98

battery = BAT0
adapter = ADP1

poll-interval = 1

time-format = %H:%M

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-charging = BAT:%percentage%% ïƒ§
label-discharging = BAT:%percentage%%
label-full = BAT:%percentage%%

bar-capacity-width = 1


[module/time]

type = internal/date
interval = 1

date = %A
date-alt = %A, %d %B %Y %I:%M %p

time = %I:%M %p

#format-prefix = | 
#format-prefix-foreground = ${colors.foreground}

format = <label>
label = "%date% %time%"

format-background = ${colors.background}
format-foreground = ${colors.foreground}


[module/network]

type = internal/network

interface = wlan0
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = NET:ONLINE
label-connected-foreground = ${colors.foreground}

label-disconnected = 
label-disconnected-foreground = ${colors.alert}
