// Rofi Configuration File //
//                         //
/////////////////////////////

configuration {
    modi:	                "run,drun";
	display-drun:           ":";
    drun-display-format:    "{name}";
    font:	                "SF Mono 11";
 }

@theme "/dev/null"

* {
    background-color:   #282828;        // Gruvbox Colors
    text-color:         #ebdbb2;
}
window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    3px;
    children:   [ horibox ];
}
horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}
listview {
    layout:     horizontal;
    spacing:    20px;
    lines:      20;
}
entry {
    expand:     false;
    width:      8em;
}
element {
    padding: 0px 0px;
}
element selected {
    background-color:   #ebdbb2;
    text-color:         #282828;
}

element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}
